
<ul class="navbar-nav">
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="/User/Info" title="Manage">Hello @(User?.Identity?.Name ?? "Unknown")</a>
        </li>
        <li class="nav-item">
            <form action="/User/Logout?ReturnUrl=/User/LoggedOut" class="form-inline" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="/User/Info" title="Manage">Anonymous</a>
        </li>
        <li class="nav-item">
            <form asp-controller="User" asp-action="Login" class="form-inline" method="get">
                <button type="submit" class="nav-link btn btn-link text-dark">Login</button>
            </form>

        </li>
    }
</ul>
